

@page
@model LoginModel
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewBag.Title = "Login";
}
@{

    ViewData["Title"] = "Log in";
}
<section id="contact" class="contact login">
    <form id="account" method="post">
        <div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="login-wrapper">
    <div class="login-page-img-block">
                    <img src="~/assets/img/appLogo.png">
    </div>
    <div class="login-page-form-block">
        <div class="login-form">
            <h5>Welcome</h5>
            <p>Login to Dashboard</p>
            <div class="form-group">
                <label asp-for="Input.Email">Username</label>
                <div class="iwi">
                    <input asp-for="Input.Email" type="text" class="form-control">
                     <span asp-validation-for="Input.Email" class="text-danger"></span>
                    <img src="~/images/user-circle.svg">
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password">Password</label>
                <div class="iwi">
                    <input asp-for="Input.Password" type="password" class="form-control">
                     <span asp-validation-for="Input.Password" class="text-danger"></span>
                    <img src="~/images/Icon-lock.svg">
                </div>
            </div>
            <div class="login-btn">
                            <button id="login-submit" href="Home/Index" type="submit" class="btn btn-primary me-2">Login</button>
                            
                            <a asp-controller="Home" asp-action="Index" class="btn btn-white ms-2">Back To Home</a>
            </div>
        </div>
    </div>
</div>
        </div>
    </form>
</section>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

