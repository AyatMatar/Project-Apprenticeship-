@using FinalProject.DTO
@model Company
@using FinalProject.Data.Entites;
@using FinalProject.Models

<div class="container">
    <!-- Modal -->
    <div class="modal" id="InsertModal" aria-hidden="true" aria-labelledby="Edit">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">

                    <h4 class="modal-title">Create New Company</h4>
                    <button type="button" class="btn-close" data-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <section id="features" class="features">
                        <form asp-action="Insert" enctype="multipart/form-data" method="post">
                            
                                

                                    <div class="container">

                                        <div class="row gy-4">
                                            <input hidden asp-for="companyId"/>
                                            <div class="col-lg-6 aos-init aos-animate" data-aos="fade-up" data-aos-delay="100">
                                                <div class="service-item d-flex">
                                                    <div class="icon flex-shrink-0"><i class="bi bi-journal-richtext"></i></div>
                                                    <div>
                                                        <h4 class="title">Company Name</h4>
                                                        <input type="text" asp-for="companyName" aria-required="true" />
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- End Service Item -->

                                            <div class="col-lg-6 aos-init aos-animate" data-aos="fade-up" data-aos-delay="100">
                                                <div class="service-item d-flex">
                                                    <div class="icon flex-shrink-0"><i class="bi bi-geo-alt-fill"></i></div>
                                                    <div>
                                                        <h4 class="title">Company Address</h4>
                                                        <input type="text" asp-for="companyAddress" aria-required="true" />
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- End Service Item -->

                                        </div>
                                    </div>
                                <div class="modal-footer">

                                    <button type="submit" class="btn btn-primary">Save</button>
                                    <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>

                                </div>
                                
                           
                        </form>
                    </section>
                </div>

            </div>
        </div>
    </div>
</div>

