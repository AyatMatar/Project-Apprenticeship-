@using FinalProject.Data.Entites
@model Objective
@using FinalProject.Models

<div class="modal" id="EditObjectiveModal-@Model.objectiveId" aria-hidden="true" aria-labelledby="Edit">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">

                <h4 class="modal-title">Update Objective</h4>
                <button type="button" class="btn-close" aria-hidden="true" data-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <section id="features" class="features">
                    <form asp-action="Update" enctype="multipart/form-data" method="post">



                        <div class="container">

                            <input type="hidden" asp-for="@Model.objectiveId" />
                            <div class="row gy-4">

                                <div class="col-lg-6 aos-init aos-animate" data-aos="fade-up" data-aos-delay="100">
                                    <div class="service-item d-flex">
                                        <div class="icon flex-shrink-0"><i class="bi bi-journal-richtext"></i></div>
                                        <div>
                                            <h4 class="title">Objective Name</h4>
                                            <input type="text" asp-for="objectivecName" aria-required="true" />
                                        </div>
                                    </div>
                                </div>
                                <!-- End Service Item -->


                            </div>

                        </div>

                        <div class="modal-footer">

                            <button type="submit" class="btn btn-primary">Save</button>
                            <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>

                        </div>
                    </form>
                </section>
            </div>

        </div>
    </div>
</div>















