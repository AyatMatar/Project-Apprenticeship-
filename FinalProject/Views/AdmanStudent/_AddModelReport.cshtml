@using FinalProject.DTO
@model Report
@using FinalProject.Data.Entites;
@using FinalProject.Models






<div class="container">
    <!-- Modal -->
    <div class="modal" id="AddModal-@Model.assignmentId" aria-hidden="true" aria-labelledby="Edit">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">

                    <h4 class="modal-title">Add Report</h4>
                    <button type="button" class="btn-close" data-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <section id="features" class="features">
                        <form asp-action="AddReport" enctype="multipart/form-data" method="post">
                            <div class="container">


                                <div class="row no-gutters">
                                    <div class=" d-flex align-items-stretch order-2 order-lg-1">
                                        <div class="content d-flex flex-column justify-content-center">
                                            <div class="row">


                                                <input type="hidden" asp-for="@Model.assignmentId" />
                                                <div class="col-md-6 icon-box aos-init aos-animate" data-aos="fade-up">
                                                    <i class="bx bx-receipt"></i>
                                                    <h4 class="title">Report Title</h4>
                                                    <input type="text" asp-for="@Model.reportName" aria-required="true" />
                                                </div>
                                                <div class="col-md-6 icon-box aos-init aos-animate" data-aos="fade-up" data-aos-delay="100">
                                                    <i class="bx bx-receipt"></i>
                                                    <h4 class="title">Report Description</h4>
                                                    <input type="text" asp-for="@Model.reportDescription" aria-required="true" />
                                                </div>
                                                <div class="col-md-6 icon-box aos-init aos-animate" data-aos="fade-up" data-aos-delay="200">
                                                    <i class="bx bx-receipt"></i>
                                                    <h4 class="title">Report Notes</h4>
                                                    <input type="text" asp-for="@Model.reportNotes" aria-required="true" />
                                                </div>
                                                <div class="col-md-6 icon-box aos-init aos-animate" data-aos="fade-up" data-aos-delay="300">
                                                    <i class="bi bi-folder-plus"></i>
                                                    <h4 class="title">Form File</h4>
                                                    <input type="file" name="formFiles" ariarequired-="true" multiple />
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>


                            </div>
                            <div class="modal-footer">
                               
                                <button type="submit" class="btn btn-primary">Save</button>
                                <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>

                            </div>
                        </form>
                    </section>
                </div>

            </div>
        </div>
    </div>
</div>
