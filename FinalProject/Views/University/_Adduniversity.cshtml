@using FinalProject.DTO
@model University
@using FinalProject.Data.Entites;
@using FinalProject.Models


<div class="container">
    
    <div class="modal" id="InsertuniversityModal" aria-hidden="true" aria-labelledby="Edit">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">

                    <h4 class="modal-title">Create New University</h4>
                    <button type="button" class="btn-close" data-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <section id="features" class="features">
                        <form asp-action="Insert" >

                            <form action="/University/Insert">

                                <div class="container">

                                    <div class="row gy-4">
                                        <input hidden asp-for="universityId" />
                                        <div class="col-lg-6 aos-init aos-animate" data-aos="fade-up" data-aos-delay="100">
                                            <div class="service-item d-flex">
                                                <div class="icon flex-shrink-0"><i class="bi bi-journal-richtext"></i></div>
                                                <div>
                                                    <h4 class="title">University Name</h4>
                                                    <input type="text" asp-for="universityName" aria-required="true" />
                                                </div>
                                            </div>
                                        </div>
                                        <!-- End Service Item -->

                                        <div class="col-lg-6 aos-init aos-animate" data-aos="fade-up" data-aos-delay="100">
                                            <div class="service-item d-flex">
                                                <div class="icon flex-shrink-0"><i class="bi bi-geo-alt-fill"></i></div>
                                                <div>
                                                    <h4 class="title">University Address</h4>
                                                    <input type="text" asp-for="universityAddress" aria-required="true" />
                                                </div>
                                            </div>
                                        </div>
                                        <!-- End Service Item -->

                                    </div>
                                </div>
                                <div class="modal-footer">

                                    <button type="submit" class="btn btn-primary">Save</button>
                                    <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>

                                </div>
                            </form>

                        </form>
                    </section>
                </div>

            </div>
        </div>
    </div>
</div>
























