@using FinalProject.Data.Entites
@using FinalProject.Models


@{
    var university = (University)ViewBag.University;
}

<section id="pricing" class="pricing">



    <div class="row  ms-5 me-5 mt-5">
        <div class="col-12 ms-4 page-title flex">
            <h5> Pag ALL University</h5>
            <div class="filter-options me-5">
                <a data-backdrop="false" data-toggle="modal" data-target="@("#InsertuniversityModal")"
                   data-url="@Url.Action($"Insert")" class="btn btn-primary"><i class="bi bi-plus-square me-2"></i>Add New  University</a>
                <a href="/Home/Index" type="button" class="btn btn-white"> <i class="bi bi-skip-backward-fill me-2"></i>Back To Home</a>

                @await Html.PartialAsync("_Adduniversity",university)
               

            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">

            @foreach (var com in (List<University>)ViewBag.Universites)
            {


                <div class="col-lg-4 col-4">
                    <div class=" box aos-init aos-animate app-pop me-3" data-aos="fade-right">


                        <div class="pricing-item ">

                            <div class="icon">
                                <i class="bi bi-buildings-fill"></i>
                            </div>
                            <ul class="ui-appren">
                                <li><i class="bi bi-check"></i> <span><b>University Name</b> : @com.universityName</span></li>
                                <li><i class="bi bi-check"></i> <span><b>University Address</b> : @com.universityAddress</span></li>



                            </ul>
                            <div id="filter-options">
                                <div class="filter-options">

                                    <a class="btn btn-gray w-34" data-backdrop="false" data-toggle="modal" data-target="@("#ViewuniversityModal-" + com.universityId)" data-url="@Url.Action($"Edit/{com.universityId}")"><img src="~/images/icon-edit.svg"></a>
                                    <a class="btn btn-gray w-34" href="/University/Delete?UniversityId=@com.universityId"><img src="~/images/icon-delete.svg"></a>

                                    
                                </div>
                            </div>

                        </div>
                    </div>
                </div>



                @await Html.PartialAsync("_EdituniversityModel",com)




            }
        </div>
    </div>

</section>




























